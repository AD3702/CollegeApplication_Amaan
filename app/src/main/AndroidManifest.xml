<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.collegeproject">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/permission_allowed"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeProject">
        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity
            android:name=".Activity.MapsActivity"
            android:exported="false"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".Activity.FingerPrint"
            android:exported="false" />
        <activity
            android:name=".Activity.FollowUS"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CompanyCard"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ContactUs"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Security"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.EditUserProfile"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.UserCard"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Feedback"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ResetPassword"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.OTPView"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.UploadResume"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ImageAddActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MasterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ForgotPassword"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Register"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.Login"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.With_Action_Bar" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>