<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Apply_For_Fragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/company_info_applied_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/applied_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:mk_color="@color/main_color"
        app:mk_type="TwinFishesSpinner"/>

    <TextView
        android:id="@+id/on_null_job_applied_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/opensanslight"
        android:gravity="center"
        android:text="You have applied for no jobs"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="invisible" />

</FrameLayout>